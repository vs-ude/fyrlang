    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug current Fyr file",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/fyrc",
            "env": {
                "FYRBASE": "${workspaceFolder}"
            },
            "args": [
                "-n",
                "${relativeFileDirname}"
            ]
        },
        {
            "name": "Debug helloworld",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/fyrc",
            "env": {
                "FYRBASE": "${workspaceFolder}"
            },
            "args": [
                "-n",
                "examples/helloworld"
            ]
        }
    ]
}
